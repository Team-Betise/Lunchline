<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/DishItem"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" android:orientation="vertical">
    <ImageView
        android:id="@+id/imageImageFour"
        android:src="@drawable/img_image4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_144pxh"
        android:layout_marginStart="@dimen/_23pxh"
        android:layout_marginTop="@dimen/_31pxv"
        android:layout_marginEnd="@dimen/_23pxh"
        android:gravity="center_horizontal"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_image4" />
    <LinearLayout android:id="@+id/linearColumndishname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_23pxh"
        android:layout_marginEnd="@dimen/_23pxh"
        android:orientation="vertical"
        style="@style/groupStylecornerRadius">
        <TextView android:ellipsize="end"
            android:id="@+id/txtDishName"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@{homePageVM.homePageModel.txtDishName}"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:singleLine="true"
            style="@style/txtIntersemibold15" tools:text="@string/lbl_dish_name"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnAdd"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@string/lbl_add"
            android:layout_marginStart="@dimen/_191pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_marginEnd="@dimen/_6pxh"
            android:layout_marginBottom="@dimen/_21pxv"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_6pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_6pxv"
            android:textAllCaps="false"
            style="@style/btnSolidRounded" tools:text="@string/lbl_add"/>
    </LinearLayout>
</LinearLayout>